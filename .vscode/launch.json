{
  "version": "0.0.1",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceRoot}/src/index.js",
      "args": [
        "config/config.json"
      ],
      "cwd": "${workspaceRoot}",
      "env": {
        "DEBUG": "*"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test Program",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "test/",
        "--recursive"
      ],
      "cwd": "${workspaceRoot}",
      "env": {
        "DEBUG": "*",
        "NODE_ENV": "test"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Process",
      "port": 5858
    }
  ]
}
